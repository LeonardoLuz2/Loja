@model IEnumerable<Loja.Application.ViewModels.ProdutoViewModel>

@{
    ViewData["Title"] = "Produtos";
}

<div class="card">
    <div class="card-header">
        <div class="float-left">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="float-right">
            <a class="btn btn-primary" asp-action="Create">Create New</a>
        </div>

    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PrecoUnitario)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrecoUnitario)
                        </td>
                        <td class="d-flex justify-content-end">
                            <a class="btn btn-warning mr-1" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-info mr-1" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>