@model Loja.Application.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Edit product";
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="red-text"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name" class="red-text"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" />
                <span asp-validation-for="Price" class="red-text"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityOnHand"></label>
                <input asp-for="QuantityOnHand" />
                <span asp-validation-for="QuantityOnHand" class="red-text"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn" />
                <a class="btn waves-effect waves-light brown darken-4" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        validacoes();
    </script>
}
